<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content well well-sm">
        <p>

          <strong><%= comment.name %>:</strong>
          <%= comment.comment %>
        </p>
      </div>
    </div>
  <% if current_user.present?  %>
      <% if current_user.admin? || comment.user.id == current_user.id %>

      <%= link_to 'Delete',article_comment_path(@article,comment),
                method: :delete, class: "btn is-danger",style:'margin-top:-20px;', data: { confirm: 'Are you sure?' } %>
      <%end %>
    <%end %>
  </article>
</div>