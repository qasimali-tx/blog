<div class="box">
  <article class="media">
    <div class="media-content">

        <p>
      <div class="col-md-1">
        <img src="/img/user.jpg" alt="User image" class="comment_image">

      </div>
          <strong><%= comment.user.name %>:</strong>
          <%= comment.comment %>
      </p>

  <% if current_user.present?  %>
      <% if current_user.admin? || comment.user.id == current_user.id %>
  <div class="centerDel">
      <%= link_to 'Delete',article_comment_path(@article,comment),
                  method: :delete, class: "btn is-danger", data: { confirm: 'Are you sure?' } %></div>
      <%end %>
    <%end %>

    </div>
  </article>
</div>